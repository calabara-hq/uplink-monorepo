{
  "compilerOptions": {
    "rootDirs": ["src"],
    "baseUrl": ".",
    "outDir": "dist",
    "lib": ["es2022"],
    "target": "es2022",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "types": ["node"],
    "paths": {
      "@/*": ["src/*"]
    }
  },
  // ignore tests in build
  "exclude": ["test"]
  //"exclude" : ["test"]
}
