datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String   @db.VarChar(1000)
  expiresAt DateTime

  @@index([id])
}

model Space {
  id       String  @id
  name     String
  members  Int
  logo_url String
  twitter  String?
  website  String?
  admins   Admin[]

  // mark id and name as unique
  @@unique([id])
}

model Admin {
  id      Int    @id @default(autoincrement())
  address String
  space   Space  @relation(fields: [spaceId], references: [id])
  spaceId String

  @@index([spaceId])
}
