{
  "name": "uplink-hub",
  "version": "1.0.0",
  "main": "index.js",
  "author": "nick",
  "license": "MIT",
  "private": true,
  "scripts": {
    "clean": "yarn workspaces foreach 'echo $(pwd)/node_modules' | xargs rm -rf",
    "test-voting": "cross-env ENV_PATH=./.env dotenv -- yarn workspace voting test",
    "test-lib": "cross-env ENV_PATH=./.env dotenv -- yarn workspace lib test"
  },
  "workspaces": [
    "packages/*",
    "packages/graphql-api/subgraphs/*"
  ],
  "constraints": {
    "rootIsolation": [
      "*"
    ]
  },
  "packageManager": "yarn@3.5.0",
  "dependencies": {
    "cross-env": "^7.0.3",
    "dotenv-cli": "^7.2.1"
  }
}
