{
  "name": "raffle",
  "version": "1.0.0",
  "main": "index.ts",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "codegen": "graphql-codegen --config codegen.yaml",
    "dev": "yarn run codegen && NODE_OPTIONS='--no-warnings --loader ts-node/esm' nodemon --watch 'src/**/*' -e ts,tsx --exec ts-node src/index.ts",
    "build": "rm -rf ./dist && yarn run codegen && tsc",
    "start": "node ./dist/index.js",
    "test": "node --loader tsx --test ./test/**/*.test.ts"
  },
  "dependencies": {
    "@apollo/federation": "^0.38.1",
    "@apollo/server": "^4.3.3",
    "@apollo/subgraph": "^2.3.1",
    "dotenv": "^16.0.3",
    "graphql": "^16.6.0",
    "graphql-middleware": "^6.1.35",
    "graphql-rate-limit": "^3.3.0",
    "graphql-shield": "^7.6.5",
    "graphql-tag": "^2.12.6",
    "ioredis": "^5.3.2",
    "lib": "workspace:*",
    "twitter-api-v2": "^1.15.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^5.0.0",
    "@graphql-codegen/typescript": "^4.0.1",
    "@graphql-codegen/typescript-resolvers": "^4.0.1",
    "@types/cookie": "^0.5.3",
    "@types/node": "^18.11.19",
    "nodemon": "^2.0.20",
    "ts-node": "^10.9.1",
    "tsx": "^3.12.7",
    "typescript": "^5.1.6"
  }
}
