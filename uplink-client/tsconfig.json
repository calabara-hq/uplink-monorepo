{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    //"strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "strict": false
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/ui/Editor/Editor.tsx",
    "src/app/(space)/[name]/contests/[id]/@dynamicSidebar/studio/default.js",
    "src/app/(space)/[name]/contests/[id]/@dynamicSidebar/default.tsx",
    "src/app/(space)/[name]/contests/[id]/default.js"
  ],
  "exclude": [
    "node_modules",
    "**/*.stories.tsx",
    "**/*.stories.ts"
  ]
}
